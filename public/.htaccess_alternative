# Versi칩n alternativa del .htaccess para XAMPP
# Si la versi칩n principal no funciona, renombra este archivo a .htaccess

RewriteEngine On
RewriteBase /sistemaAcademico/public/

# Permitir acceso a archivos est치ticos
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirigir todo lo dem치s a index.php
RewriteRule ^ index.php [L]

# Proteger archivos sensibles
<FilesMatch "\.(env|ini|log|sh)$">
    Require all denied
</FilesMatch>

