# Configuración para Sistema de Tutoría MVC

<IfModule mod_rewrite.c>
    RewriteEngine On
    # RewriteBase se detecta automáticamente, pero puedes descomentar y ajustar si es necesario
    # RewriteBase /sistemaTutoria/
    
    # Permitir acceso a archivos y carpetas existentes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirigir todo al index.php (URLs amigables - opcional)
    # RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>

# Denegar acceso a archivos sensibles
<FilesMatch "^(config\.php|\.env|\.git)">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Configuración de codificación
AddDefaultCharset UTF-8

# Configuración de PHP (opcional)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>
